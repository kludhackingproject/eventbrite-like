<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= label_tag 'Email' %>
          <%= f.text_field :email, required: false, autofocus: true, class:"form-control"  %>
        </div>

        <div class="form-group">
          <%= label_tag 'Pasword' %>
          <%= f.password_field :password, required: false, autofocus: true, class:"form-control"  %>
        </div>
        <div class="form-group">
          <%= f.input :remember_me, class:"form-check-label", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
